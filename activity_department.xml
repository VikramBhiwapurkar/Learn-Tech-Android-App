<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_200"
    android:layout_height="match_parent"
    tools:context=".DepartmentActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="50dp"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">


            <ImageView
                android:layout_width="240dp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="150dp"
                android:layout_height="250dp"
                android:src="@drawable/robo"/>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer Science and Engineering"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20sp"/>
        </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="65dp"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="@color/purple_200"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="20dp">

                        <TextView
                            android:id="@+id/c1y"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="1st YEAR"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="@color/purple_200"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="20dp">

                        <TextView
                            android:id="@+id/secondyear"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="2nd YEAR"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="160dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="@color/purple_200"
                        android:clickable="true"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="20dp">

                        <TextView
                            android:id="@+id/c3y"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="3rd YEAR"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="250dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp"
                        android:backgroundTint="@color/purple_200"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="20dp">

                        <TextView
                            android:id="@+id/c4y"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="4th YEAR"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


<!--        ECE-->


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="500dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <ImageView
                android:layout_width="240dp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="150dp"
                android:layout_height="250dp"
                android:src="@drawable/robo"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electronics and Communication Engineering"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="65dp"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@color/purple_200"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="20dp">

                        <TextView
                            android:id="@+id/e1y"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1st YEAR"
                            android:gravity="center"
                            android:clickable="true"
                            android:layout_marginTop="10dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="100dp"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="140dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@color/purple_200"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="20dp">

                        <TextView
                            android:id="@+id/e2y"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2nd YEAR"
                            android:gravity="center"
                            android:clickable="true"
                            android:layout_marginTop="10dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="180dp"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:clickable="true"
                        android:layout_height="50dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@color/purple_200"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="20dp">

                        <TextView
                            android:id="@+id/e3y"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="3rd YEAR"
                            android:clickable="true"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="260dp"
                    android:layout_height="50dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginStart="10dp"
                        android:backgroundTint="@color/purple_200"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="20dp">

                        <TextView
                            android:id="@+id/e4y"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="4th YEAR"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:textSize="18sp"
                            android:clickable="true"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</ScrollView>
